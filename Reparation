    }

    public boolean ajouterReparation(){
      boolean isAdded=false;
       try {
           
        if(_db.doNonQuery("INSERT INTO reparation(matricule,motif,lieu,daterep,prix)VALUES(?,?,?,?,?);",
                jComboBox1.getSelectedItem(),
                this.jTextArea1.getText(),
                this.jTextArea3.getText(),
                this.jFormattedTextField1.getText(),
                this.jTextField1.getText()
                
                ));
             isAdded=true;
        } catch (SQLException e) {
            javax.swing.JOptionPane.showMessageDialog(null,"Erreur d'ajout"+e); 
        }finally{
       reSet();
       }
        return isAdded;
    }
    
    public void reSet(){
    jComboBox1.removeAllItems();
        jTextArea1.setText(null);
        jTextArea3.setText(null);
        jFormattedTextField1.setText(null);
        jTextField1.setText(null);
        this._db.remplCombo("select matricule from voiture;", jComboBox1);
    }
