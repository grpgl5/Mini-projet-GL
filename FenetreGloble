    public void loadData() throws SQLException{
        if(jComboBox1.getSelectedItem().equals("tout les Voitures")){
    _db.loadTable("select * from voiture", jTable1,"matricule","marque","model","prix location par jour","date de mise en circulation","motif");
        }else if(jComboBox1.getSelectedItem().equals("voitures Louées")){
    _db.loadTable("select voiture.matricule,marque,model,motif,personne.cin,concat(personne.nom,' ',personne.prenom) from location join voiture on location.matricule=voiture.matricule join personne on location.cin=personne.cin where DATE_ADD(location.dateDebut,INTERVAL location.nbrjours DAY) < CURDATE();", jTable1,"matricule","marque","model","motif","CIN ","nom");    
        }else if(jComboBox1.getSelectedItem().equals("voitures Disponible")){
    _db.loadTable("select voiture.matricule,marque,model,prixlocationpjour,datemc,motif from location join voiture on location.matricule=voiture.matricule where DATE_ADD(location.dateDebut,INTERVAL location.nbrjours DAY) > CURDATE() union select voiture.matricule,marque,model,prixlocationpjour,datemc,motif from  voiture where matricule not in (Select matricule from location);", jTable1,"matricule","marque","model","prix location par jour","date de mise en circulation","motif");    
        }else if(jComboBox1.getSelectedItem().equals("Reparation du mois")){
    _db.loadTable("select voiture.matricule,marque,model,lieu,reparation.motif,prix,daterep from voiture join reparation on voiture.matricule= reparation.matricule where month(daterep) between month(now())-1 and month(now());", jTable1,"matricule","marque","model","Lieu","motif","Prix","Date reparation");    
        } 
        else{
    _db.loadTable("SELECT * FROM gldb.reservation where month(datereservation) between month(now())-1 and month(now());", jTable1,"N° reservation","matricule","CIN","Date reservation","Nombre de jours","Remarque");    
        }
        }
