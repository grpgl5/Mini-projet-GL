    public void reSet(){
    jComboBox1.removeAll();
    jTextField1.setText(null);
    jTextField2.setText(null);
    jFormattedTextField1.setText(null);
    this._db.remplCombo("select matricule from voiture;", jComboBox1);
    }
    public boolean ajouterFA(){
          boolean isAdded=false;
       try {
           
        if(_db.doNonQuery("INSERT INTO gldb.assfiscalite(matricule,anneeassur,fiscalitepayer,datepaiment)VALUES(?,?,?,?);",
                jComboBox1.getSelectedItem(),
                jTextField2.getText(),
                jTextField1.getText(),
                this.jFormattedTextField1.getText()));
             isAdded=true;
        } catch (SQLException e) {
            javax.swing.JOptionPane.showMessageDialog(null,"Erreur d'ajout"+e); 
        }
        return isAdded;
    }/**
