    public Reservation(String action) {
         this.action=action;
        initComponents();
        if(this.action.equals("Ajouter")){
            jButton1.setText("Ajouter");
            jComboBox2.setEditable(true);
        }
        else if(this.action.equals("Modifier")){
            jButton1.setText("Modifier");
            _db.remplCombo("SELECT nreservation FROM reservation;", jComboBox2);
            jComboBox2.setEditable(false);
        }
        else if(this.action.equals("Supprimer")){
            jButton1.setText("Supprimer");
            _db.remplCombo("SELECT nreservation FROM reservation;", jComboBox2);
            jComboBox2.setEditable(false);
        }
        _db.remplCombo("select matricule from voiture;", jComboBox1);
        this.setVisible(true);
        
    }

