    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        // TODO add your handling code here:
         if(jButton1.getText().equals("Ajouter")){
            this.ajouterReservation();
            javax.swing.JOptionPane.showMessageDialog(null,"l'ajout est effectuer"); 
            this.reSet();
        }else if(jButton1.getText().equals("Modifier")){
            this.modifierReservation();
            javax.swing.JOptionPane.showMessageDialog(null,"la Modification est effectuer"); 
            this.reSet();
        }else if(jButton1.getText().equals("Supprimer")){
            this.supprimerReservation();
            javax.swing.JOptionPane.showMessageDialog(null,"la suppression est effectuer"); 
            this.reSet();}
    
    }//GEN-LAST:event_jButton1ActionPerformed

    
     public boolean ajouterReservation(){
         boolean isAdded=false;
       try {
          
        if(_db.doNonQuery("INSERT INTO personne(CIN,IDpermit,nom,prenom,adresse)VALUES(?,?,?,?,?);",
                this.jTextField1.getText(),
                this.jTextField4.getText(),
                this.jTextField2.getText(),
                this.jTextField3.getText(),
                this.jTextArea1.getText()
        ) && _db.doNonQuery("INSERT INTO reservation(nreservation,matricule,CIN,datereservation,nbrjours,remarque)VALUES(?,?,?,?,?,?);",
                        this.jComboBox2.getSelectedItem(),
                        this.jComboBox1.getSelectedItem(),
                        this.jTextField1.getText(),
                        this.jFormattedTextField1.getText(),
                        this.jSpinner1.getValue().toString(),
                        this.jTextArea2.getText()
                        ))
             isAdded=true;
        } catch (SQLException e) {
            javax.swing.JOptionPane.showMessageDialog(null,"Erreur d'ajout"+e); 
        }
        return isAdded;
    }
        
        public boolean modifierReservation(){
            boolean isModi=false;
            
            try {
            if(_db.doNonQuery("UPDATE personne SET CIN = '" + this.jTextField1.getText() + "',IDpermit = '" + this.jTextField4.getText() + "',nom = '" + this.jTextField2.getText() + "',prenom = '" + this.jTextField3.getText() + "',adresse = '" + this.jTextArea1.getText() + "' WHERE CIN = '" + this.jTextField1.getText() + "';") && 
                    _db.doNonQuery("UPDATE reservation SET matricule = '" + this.jComboBox1.getSelectedItem() + "',CIN = '" + this.jTextField1.getText() + "',datereservation = '" + this.jFormattedTextField1.getText() + "',nbrjours =" + this.jSpinner1.getValue() + ",remarque = '" + this.jTextArea2.getText() + "' WHERE nreservation = '" + this.jComboBox2.getSelectedItem()+ "';") )
                isModi=true;
             } catch (SQLException ex) {
            Logger.getLogger(Location.class.getName()).log(Level.SEVERE, null, ex);
        }
        this.reSet();
            return isModi;
        }
        
       
        public boolean supprimerReservation(){
            boolean isDel=false;
        try {
            
            if(_db.doNonQuery("DELETE from reservation where nreservation='" + jComboBox2.getSelectedItem() + "';"))isDel=true;
            
            
           
        } catch (SQLException ex) {
            Logger.getLogger(Location.class.getName()).log(Level.SEVERE, null, ex);
        }
        this.reSet();
         return isDel;
        }
        
        public void reSet(){
             jComboBox1.removeAllItems();
             jComboBox2.removeAllItems();
                jTextField1.setText(null);
                jTextField2.setText(null);
                jTextField4.setText(null);
                jTextField3.setText(null);
                jTextArea1.setText(null);
                jFormattedTextField1.setText(null);
                jSpinner1.setValue(0);
                jTextArea2.setText(null);
                _db.remplCombo("select matricule from voiture;", jComboBox1);
                if(this.action.equals("Modifier") || this.action.equals("Supprimer"))_db.remplCombo("SELECT nreservation FROM reservation;", jComboBox2);
        }
        
        public void loadData(){
        try {
            _rs = _db.doQuery("SELECT matricule,reservation.CIN,IDpermit,nom,prenom,adresse,datereservation,nbrjours,remarque\n" +
"FROM personne JOIN location ON personne.CIN=reservation.CIN where nreservation='" + jComboBox1.getSelectedItem() + "';");
            _rs.next();
            jComboBox1.setSelectedItem(_rs.getString(1));
                jTextField1.setText(_rs.getString(2));
                jTextField2.setText(_rs.getString(4));
                jTextField4.setText(_rs.getString(3));
                jTextField3.setText(_rs.getString(5));
                jTextArea1.setText(_rs.getString(6));
                jFormattedTextField1.setText(_rs.getString(7));
                jSpinner1.setValue(_rs.getString(8));
                jTextArea2.setText(_rs.getString(9));
                
               
            
        } catch (SQLException e) {
        }
        }
