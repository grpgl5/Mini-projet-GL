    private void ActionActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_ActionActionPerformed
                // TODO add your handling code here:
        if(Action.getText().equals("Ajouter") && this.ajouterVoiture()){
         javax.swing.JOptionPane.showMessageDialog(null,"l'ajout est effectuer"); 
        }else if(Action.getText().equals("Supprimer") && this.supprimerVoiture())
              javax.swing.JOptionPane.showMessageDialog(null,"la suppression est effectuer");
        this.reSet();
    }//GEN-LAST:event_ActionActionPerformed

    private void jComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jComboBox1ActionPerformed
        // TODO add your handling code here:
        this.loadData();
    }//GEN-LAST:event_jComboBox1ActionPerformed

    /**
     * @param args the command line arguments
     */
    public boolean ajouterVoiture(){
         boolean isAdded=false;
       try {
           
        if(_db.doNonQuery("INSERT INTO voiture(matricule,marque,model,prixlocationpjour,datemc,motif) VALUES (?,?,?,?,?,?);",
                jComboBox1.getSelectedItem(),
                this.jTextField1.getText(),
                this.jTextField3.getText(),
                this.jTextField4.getText(),
                this.jFormattedTextField1.getText(),
                this.jTextArea1.getText()));
             isAdded=true;
        } catch (SQLException e) {
            javax.swing.JOptionPane.showMessageDialog(null,"Erreur d'ajout"+e); 
        }
        return isAdded;
    }
    public void loadData(){
    try {
            _rs = _db.doQuery("select * from voiture where matricule='" + jComboBox1.getSelectedItem() + "';");
            while (_rs.next()) {
                jTextField1.setText(_rs.getString(2));
                jTextField3.setText(_rs.getString(3));
                jTextField4.setText(_rs.getString(4));
                jFormattedTextField1.setText(_rs.getString(5));
                jTextArea1.setText(_rs.getString(6));
               
            }
        } catch (SQLException e1) {
        }
    }
    public void reSet(){
    
    this.jFormattedTextField1.setText(null);
    this.jTextArea1.setText(null);
    this.jTextField1.setText(null);
    this.jTextField3.setText(null);
    this.jTextField4.setText(null);
    if(Action.getText().equals("Supprimer"))this._db.remplCombo("select matricule from voiture;", jComboBox1);
    else jComboBox1.setSelectedItem("");
    }
    
    public boolean supprimerVoiture(){
       boolean isAdded=false;
       try {
           
        if(_db.doNonQuery("DELETE FROM voiture WHERE matricule =?;",jComboBox1.getSelectedItem()));
             isAdded=true;
        } catch (SQLException e) {
            javax.swing.JOptionPane.showMessageDialog(null,"Erreur de suppression"+e); 
        }
        return isAdded;
    }
   
